{
	"ts-node": {
		"files": true
	},
	"compilerOptions": {
		"target": "ESNext",
		"module": "NodeNext",
		"moduleResolution": "nodenext",
		"allowSyntheticDefaultImports": true,
		"outDir": "./lib",
		"rootDir": "./src",
		"declaration": true,
		"strict": true,
		"esModuleInterop": true,
		"sourceMap": true
	},
	"include": ["src"],
	"exclude": ["test"]
}
